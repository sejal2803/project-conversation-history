<div class="container">
  <h1>New Project</h1>

  <%= form_with model: @project, url: projects_path do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(Project::STATUSES.map { |s| [s.titleize, s] }), {}, class: "form-control" %>
      </div>

    <%= form.submit "Create Project", class: "btn btn-primary" %>
  <% end %>
</div>
