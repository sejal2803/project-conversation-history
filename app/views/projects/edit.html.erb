<h1>Edit Project</h1>

<%= form_with model: @project, url: project_path(@project), method: :patch do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :status %>
  <%= form.select :status, options_for_select(Project::STATUSES, @project.status) %>

  <%= form.submit "Update Project" %>
<% end %>
